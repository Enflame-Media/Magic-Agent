{
    "$schema": "https://turborepo.com/schema.json",
    "globalEnv": [
        "NODE_ENV",
        "CI"
    ],
    "globalPassThroughEnv": [
        "GITHUB_TOKEN",
        "NPM_TOKEN"
    ],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"],
            "env": [
                "HAPPY_SERVER_URL",
                "HAPPY_WEBAPP_URL"
            ]
        },
        "typecheck": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "lint": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "lint:fix": {
            "dependsOn": ["^build"],
            "outputs": [],
            "cache": false
        },
        "format": {
            "outputs": [],
            "cache": false
        },
        "format:check": {
            "outputs": []
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"],
            "env": [
                "DATABASE_URL",
                "REDIS_URL",
                "HAPPY_MASTER_SECRET"
            ]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        },
        "deploy:dev": {
            "dependsOn": ["typecheck"],
            "cache": false,
            "env": [
                "CLOUDFLARE_API_TOKEN",
                "CLOUDFLARE_ACCOUNT_ID"
            ]
        },
        "deploy:prod": {
            "dependsOn": ["typecheck", "test"],
            "cache": false,
            "env": [
                "CLOUDFLARE_API_TOKEN",
                "CLOUDFLARE_ACCOUNT_ID"
            ]
        },
        "db:migrate": {
            "cache": false
        },
        "db:generate": {
            "cache": false
        }
    },
    "ui": "tui"
}
