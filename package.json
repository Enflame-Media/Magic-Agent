{
  "private": true,
  "name": "happy-monorepo",
  "description": "Happy monorepo - Mobile and web client for Claude Code and Codex",
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "packages/schema/*",
    "dev/lint-rules",
    "apps/cli",
    "apps/server/workers",
    "apps/web/vue",
    "apps/admin/*"
  ],
  "scripts": {
    "preinstall": "node -e \"const p=require('path');if(process.cwd()!==p.dirname(p.resolve('./package.json'))){console.error('\\nâŒ Run yarn install from the monorepo root:\\n   cd '+p.dirname(p.resolve('./package.json'))+'\\n');process.exit(1)}\"",
    "postinstall": "yarn workspace @happy/errors build && yarn workspace @happy/protocol build",
    "build": "turbo run build",
    "build:errors": "yarn workspace @happy/errors build",
    "build:protocol": "yarn workspace @happy/protocol build",
    "typecheck": "turbo run typecheck",
    "typecheck:errors": "yarn workspace @happy/errors typecheck",
    "typecheck:protocol": "yarn workspace @happy/protocol typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "format:root": "oxfmt .",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "dev": "turbo run dev",
    "clean": "turbo run clean",
    "schema:extract": "yarn workspace @happy/protocol schema:extract",
    "schema:compare": "tsx scripts/compare-schemas.ts",
    "ncu:all": "find . -name package.json -not -path '*/node_modules/*' -execdir ncu -u \\;",
    "deploy:stack:pro": "turbo run deploy:prod --filter=happy-server-workers --filter=happy",
    "deploy:stack:dev": "turbo run deploy:dev --filter=happy-server-workers --filter=happy"
  },
  "devDependencies": {
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "tsx": "^4.21.0",
    "turbo": "^2.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
