{
  "name": "happy-server-workers",
  "version": "0.0.0",
  "description": "Happy Server on Cloudflare Workers with Hono",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 execute happy-db --local --file=./drizzle/migrations/*.sql",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "db:compare": "tsx src/db/comparison-tool.ts"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "hono",
    "typescript"
  ],
  "author": "Steve Korshakov <steve@korshakov.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251121.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13",
    "wrangler": "^4.50.0"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.5",
    "@libsql/client": "^0.15.15",
    "@paralleldrive/cuid2": "^3.1.0",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6",
    "privacy-kit": "0.0.23",
    "tweetnacl": "^1.0.3",
    "zod": "^4.1.12"
  }
}