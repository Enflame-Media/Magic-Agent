{
    "$schema": "https://oxc.rs/schemas/oxfmtrc.json",
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "ignore": [
        "node_modules",
        "dist",
        "build",
        ".turbo",
        ".wrangler",
        ".expo",
        ".eas",
        "coverage",
        "*.d.ts",
        "*.json",
        "*.md"
    ]
}
