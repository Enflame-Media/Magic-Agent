{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
      "@happy-vue/shared": ["../../packages/shared/src"],
      "@happy-vue/shared/*": ["../../packages/shared/src/*"],
      "@happy-vue/protocol": ["../../packages/protocol/src"],
      "@happy-vue/protocol/*": ["../../packages/protocol/src/*"]
    },
    "types": ["@nativescript/types"],
    "jsx": "preserve",
    "jsxImportSource": "vue"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "references.d.ts",
    "nativescript.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "platforms",
    "hooks"
  ],
  "references": [
    { "path": "../../packages/shared" },
    { "path": "../../packages/protocol" }
  ]
}
