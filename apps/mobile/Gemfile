# frozen_string_literal: true

source "https://rubygems.org"

# Fastlane - iOS and Android build automation
gem "fastlane", "~> 2.225"

# Fastlane plugins
gem "fastlane-plugin-versioning", "~> 0.5"

# Code signing for iOS (Match)
# Match stores certificates and profiles in a git repo
# and handles all the complexity of iOS code signing

# Play Store deployment for Android
# Supply is included in fastlane core

# Cocoapods for iOS dependencies (if needed)
gem "cocoapods", "~> 1.15"
