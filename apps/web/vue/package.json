{
  "name": "happy-vue",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Happy Vue.js web application for Claude Code remote control",
  "scripts": {
    "preinstall": "node -e \"if(!process.env.INIT_CWD?.endsWith('/happy')){console.error('âŒ Run yarn install from monorepo root');process.exit(1)}\"",
    "dev": "vite",
    "build": "npx vue-tsc --noEmit && npx vite build",
    "preview": "vite preview",
    "typecheck": "npx vue-tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --coverage --reporter=verbose",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:e2e:visual": "percy exec -- playwright test e2e/visual.spec.ts",
    "test:e2e:visual:local": "playwright test e2e/visual.spec.ts",
    "test:e2e:report": "playwright show-report",
    "test:mobile": "wdio run appium.config.ts",
    "test:mobile:ios": "MOBILE_PLATFORM=ios wdio run appium.config.ts",
    "test:mobile:android": "MOBILE_PLATFORM=android wdio run appium.config.ts",
    "test:browserstack": "wdio run browserstack.config.ts",
    "test:browserstack:ios": "MOBILE_PLATFORM=ios wdio run browserstack.config.ts",
    "test:browserstack:android": "MOBILE_PLATFORM=android wdio run browserstack.config.ts",
    "test:a11y": "vitest run --reporter=verbose a11y",
    "test:e2e:a11y": "playwright test e2e/accessibility.spec.ts",
    "test:all": "yarn test:unit && yarn test:e2e",
    "lint": "echo 'Linting handled at root level'",
    "lint:fix": "echo 'Linting handled at root level'",
    "clean": "rm -rf dist .vite playwright-report test-results allure-results screenshots appium-logs",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:prod": "wrangler deploy --env production",
    "pwa-screenshots:deploy:dev": "cd scripts/pwa-screenshots && yarn install && wrangler deploy --env development",
    "pwa-screenshots:deploy:prod": "cd scripts/pwa-screenshots && yarn install && wrangler deploy --env production",
    "pwa-screenshots:generate:dev": "curl -s https://happy-pwa-screenshots-dev.enflamemedia.workers.dev/generate",
    "pwa-screenshots:generate:prod": "curl -s https://happy-pwa-screenshots.enflamemedia.workers.dev/generate",
    "pwa-screenshots:download:dev": "cd scripts/pwa-screenshots && ./download-screenshots.sh dev",
    "pwa-screenshots:download:prod": "cd scripts/pwa-screenshots && ./download-screenshots.sh prod",
    "pwa-screenshots:status:dev": "curl -s https://happy-pwa-screenshots-dev.enflamemedia.workers.dev/status",
    "pwa-screenshots:status:prod": "curl -s https://happy-pwa-screenshots.enflamemedia.workers.dev/status"
  },
  "dependencies": {
    "@11labs/client": "^0.2.0",
    "@magic-agent/protocol": "workspace:*",
    "@revenuecat/purchases-js": "^1.25.0",
    "@tabler/icons-vue": "^3.36.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/vue-form": "^1.28.0",
    "@tanstack/vue-table": "^8.21.3",
    "@tanstack/vue-virtual": "^3.13.18",
    "@unovis/ts": "^1.6.4",
    "@unovis/vue": "^1.6.4",
    "@vueuse/core": "^14.2.1",
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "4.3.0",
    "jszip": "^3.10.1",
    "lucide-vue-next": "^0.563.0",
    "pinia": "^3.0.4",
    "reka-ui": "^2.8.0",
    "shiki": "^3.22.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tweetnacl": "^1.0.3",
    "vue": "^3.5.28",
    "vue-i18n": "^12.0.0-alpha.3",
    "vue-input-otp": "^0.3.2",
    "vue-router": "^5.0.2",
    "vue-sonner": "^2.0.9",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@cloudflare/vite-plugin": "^1.24.0",
    "@percy/cli": "^1.31.8",
    "@percy/playwright": "^1.0.10",
    "@playwright/test": "^1.58.2",
    "@types/jszip": "^3.4.1",
    "@types/node": "^25.2.3",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vue/test-utils": "^2.4.6",
    "@wdio/allure-reporter": "^9.24.0",
    "@wdio/appium-service": "^9.24.0",
    "@wdio/browserstack-service": "^9.24.0",
    "@wdio/cli": "^9.24.0",
    "@wdio/junit-reporter": "^9.24.0",
    "@wdio/local-runner": "^9.24.0",
    "@wdio/mocha-framework": "^9.24.0",
    "@wdio/spec-reporter": "^9.24.0",
    "@wdio/types": "^9.24.0",
    "happy-dom": "^20.6.1",
    "shadcn-vue": "^2.4.3",
    "ts-node": "^10.9.2",
    "turbo": "^2.8.5",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18",
    "vitest-axe": "^0.1.0",
    "vue-tsc": "^3.2.4",
    "wrangler": "^4.64.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "happy",
    "vue",
    "monorepo",
    "claude-code"
  ],
  "license": "MIT"
}
